{
    "type": "basic",
    "name": "Test 1",
    "steps": [
        {
            "action": "navigate",
            "config": {
                "url": "{{base_url}}"
            }
        },
        {
            "action": "expect",
            "context": "response",
            "matcher": ["status", "toBe", 200]
        },
        {
            "action": "expect",
            "context": "response",
            "matcher": ["headers.content-type", "toContain", "text/html"]
        },
        {
            "action": "expect",
            "context": "response",
            "matcher": ["data", "toContain", "theLoginModal"]
        },
        {
            "action": "expect",
            "context": "response",
            "matcher": ["duration", "toBeLessThan", 2000]
        },
        {
            "action": "navigate",
            "config": {
                "url": "{{base_url}}/login",
                "method": "post",
                "data": {
                    "User": {
                        "username": "{{username}}",
                        "password": "{{password}}"
                    }
                }
            }
        },
        {
            "action": "expect",
            "context": "response",
            "matcher": ["data", "not.toContain", "error_message"]
        },
        {
            "action": "expect",
            "context": "response",
            "matcher": ["data", "not.toContain", "loginForm"]
        }
    ]
}
