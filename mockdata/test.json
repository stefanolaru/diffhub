{
    "type": "basic",
    "name": "Test 1",
    "steps": [
        {
            "action": "navigate",
            "config": {
                "url": "{{base_url}}"
            }
        },
        {
            "action": "expect",
            "context": "response",
            "subject": "status",
            "matcher": "toBe",
            "value": 200
        },
        {
            "action": "expect",
            "context": "response",
            "subject": "headers.content-type",
            "matcher": "toContain",
            "value": "text/html"
        },
        {
            "action": "expect",
            "context": "response",
            "subject": "data",
            "matcher": "toContain",
            "value": "theLoginModal"
        },
        {
            "action": "expect",
            "context": "metrics",
            "subject": "duration",
            "matcher": "toBeLessThan",
            "value": 2000
        },
        {
            "action": "navigate",
            "config": {
                "url": "{{base_url}}/login",
                "method": "post",
                "data": {
                    "User": {
                        "username": "{{username}}",
                        "password": "{{password}}"
                    }
                }
            }
        },
        {
            "action": "expect",
            "context": "response",
            "subject": "data",
            "matcher": "not.toContain",
            "value": "error_message"
        },
        {
            "action": "expect",
            "context": "response",
            "subject": "data",
            "matcher": "not.toContain",
            "value": "loginForm"
        }
    ]
}
