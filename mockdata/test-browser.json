{
    "type": "browser",
    "name": "Browser Test 1",
    "steps": [
        {
            "action": "navigate",
            "config": {
                "url": "https://crafty.ro"
            }
        },
        {
            "action": "type",
            "config": {
                "selector": ".search_field",
                "text": "stefan",
                "options": {
                    "delay": 5
                }
            }
        },
        {
            "action": "expect",
            "context": "response",
            "subject": "headers.content-type",
            "matcher": "toContain",
            "value": "text/html"
        },
        {
            "action": "expect",
            "context": "document",
            "subject": "#favorites_count",
            "matcher": "toBePresent"
        },
        {
            "action": "click",
            "config": {
                "selector": "#submenu > li:first-child > a",
                "navigate": true
            }
        },
        {
            "action": "expect",
            "context": "document",
            "subject": ["h2.title", "innerText"],
            "matcher": "toContain",
            "value": "Accesorii Handmade"
        }
    ]
}
