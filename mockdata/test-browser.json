{
    "type": "browser",
    "name": "Browser Test 1",
    "steps": [
        {
            "action": "navigate",
            "url": "{{base_url}}"
        },
        {
            "action": "type",
            "selector": ".search_field",
            "text": "stefan",
            "options": {
                "delay": 5
            }
        },
        {
            "action": "expect",
            "context": "response",
            "subject": "headers.content-type",
            "matcher": "toContain",
            "value": "text/html"
        },
        {
            "action": "expect",
            "context": "document",
            "subject": "#favorites_count",
            "matcher": "toBePresent"
        },
        {
            "action": "click",
            "selector": "#submenu > li:first-child > a",
            "navigate": true
        },
        {
            "action": "expect",
            "context": "document",
            "subject": ["h2.title", "innerText"],
            "matcher": "toContain",
            "value": "Accesorii Handmade"
        }
    ]
}
